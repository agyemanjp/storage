{
	"compilerOptions": {
		"target": "ES2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"traceResolution": false,
		"declaration": true,
		"lib": [
			"es7",
			"es6",
			"es5",
			"dom",
			"es2015.promise",
			"scripthost",
			"dom.iterable",
			"esnext.asynciterable"
		],
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"incremental": true,
		"outDir": "./dist"
	},
	"include": [
		"./src",
	]
}