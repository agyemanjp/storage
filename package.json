{
	"name": "@agyemanjp/storage",
	"version": "1.4.12",
	"description": "Datasource access through the repository pattern in Javascript/TypeScript",
	"main": "index.js",
	"types": "index.d.ts",
	"files": [
		"*",
		"!*.tsbuildinfo"
	],
	"scripts": {
		"deps": "rm -rf ./node_modules package-lock.json && npm install",
		"clean": "rm -rf dist/* .eslintcache *-report.json",
		"lint": "eslint --ext ts --cache 'src/**'",
		"lint-report": "eslint --ext ts --output-file .lint-report.json --format json-standard --cache 'src/**'",
		"compile": "tsc",
		"test": "mocha --require ts-node/register test/*.test.*",
		"test-report": "mocha --require ts-node/register test/*.test.* --reporter mocha-reporter-json-standard >| .test-report.json",
		"build": "run-s clean lint compile test",
		"pubstage": "cp package.json LICENSE README.md dist",
		"package": "npm run pubstage && cd dist && npm publish --dry-run && cd ..",
		"version:patch": "npm version patch && git push --follow-tags",
		"version:minor": "npm version minor && git push --follow-tags",
		"version:major": "npm version major && git push --follow-tags",
		"publish:patch": "run-s build version:patch pubstage && cd dist && npm publish --access public && cd ..",
		"publish:minor": "run-s build version:minor pubstage && cd dist && npm publish --access public && cd ..",
		"publish:major": "run-s build version:major pubstage && cd dist && npm publish --access public && cd .."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Hypothesize/storage.js.git"
	},
	"keywords": [
		"repository",
		"database",
		"postgres",
		"api",
		"ORM"
	],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Hypothesize/storage.js/issues"
	},
	"homepage": "https://github.com/Hypothesize/storage.js#readme",
	"devDependencies": {
		"@types/eslint": "^7.2.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^14.0.4",
		"@types/request": "^2.48.5",
		"@types/shortid": "0.0.29",
		"@types/source-map-support": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "3.4.0",
		"@typescript-eslint/parser": "3.4.0",
		"eslint": "^7.3.1",
		"eslint-formatter-json-standard": "^1.0.0",
		"eslint-plugin-fp": "2.3.0",
		"mocha": "^7.1.1",
		"mocha-reporter-json-standard": "^1.0.0",
		"npm-run-all": "^4.1.5",
		"source-map-support": "^0.5.19",
		"ts-node": "^8.10.2",
		"typescript": "^4.0.5"
	},
	"dependencies": {
		"@agyemanjp/standard": "^3.8.5",
		"shortid": "^2.2.15"
	}
}
